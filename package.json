{
  "name": "minista-project",
  "private": true,
  "type": "module",
  "scripts": {
    "minista:dev": "minista",
    "minista:build": "minista build",
    "tailwind:dev": "npx tailwindcss -i ./src/assets/input.css -o ./src/assets/output.css --watch",
    "tailwind:build": "npx tailwindcss -i ./src/assets/input.css -o ./src/assets/output.css --minify",
    "dev": "npx concurrently \"npm run minista:dev\" \"npm run tailwind:dev\"",
    "build": "npm run tailwind:build && npm run minista:build",
    "preview": "minista preview",
    "deploy": "wrangler deploy"
  },
  "prettier": {
    "semi": false
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@types/react": "^18.2.16",
    "@types/react-dom": "^18.2.7",
    "minista": "^3.1.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.1.6",
    "wrangler": "^4.28.0"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "tailwindcss": "^4.1.11"
  }
}
